@{
    ViewData["Title"] = "Đặt chỗ";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var seat = ViewBag.Seat as DATN_SD16.Models.Entities.ReadingRoomSeat;
}

<div class="max-w-3xl mx-auto">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="@Url.Action("Details", "ReadingRoom", new { id = seat?.RoomId })" 
           class="inline-flex items-center gap-2 text-primary hover:underline">
            <span class="material-symbols-outlined">arrow_back</span>
            Quay lại sơ đồ phòng
        </a>
    </div>

    <!-- Seat Info Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden mb-6">
        <div class="bg-gradient-to-r from-green-500 to-green-600 px-6 py-4">
            <h1 class="text-2xl font-bold text-white">Đặt chỗ ngồi</h1>
            <p class="text-green-100 text-sm">@seat?.Room?.RoomName - Chỗ @seat?.SeatNumber</p>
        </div>

        <div class="p-6">
            <form asp-action="Reserve" method="post" id="reservationForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="seatId" value="@seat?.SeatId" />
                <input type="hidden" name="reservationDate" id="reservationDateTime" />

                <!-- Date Selection -->
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Ngày đặt <span class="text-red-500">*</span>
                    </label>
                    <input type="date" 
                           id="reservationDate"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                           min="@DateTime.Now.ToString("yyyy-MM-dd")"
                           required />
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        Chọn ngày bạn muốn đến phòng đọc
                    </p>
                </div>

                <!-- Time Selection -->
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Giờ đến <span class="text-red-500">*</span>
                    </label>
                    <input type="time" 
                           id="reservationTime"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                           required />
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        Giờ bạn dự kiến đến
                    </p>
                </div>

                <!-- Duration Selection -->
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Thời gian sử dụng <span class="text-red-500">*</span>
                    </label>
                    <select name="durationHours" 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                            required>
                        <option value="">-- Chọn thời gian --</option>
                        <option value="1">1 giờ</option>
                        <option value="2" selected>2 giờ</option>
                        <option value="3">3 giờ</option>
                        <option value="4">4 giờ</option>
                        <option value="6">6 giờ</option>
                        <option value="8">Cả ngày (8 giờ)</option>
                    </select>
                </div>

                <!-- Summary -->
                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
                    <h3 class="font-semibold text-blue-900 dark:text-blue-200 mb-3">Thông tin đặt chỗ</h3>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-blue-800 dark:text-blue-300">Phòng:</span>
                            <span class="font-medium text-blue-900 dark:text-blue-200">@seat?.Room?.RoomName</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-blue-800 dark:text-blue-300">Chỗ ngồi:</span>
                            <span class="font-medium text-blue-900 dark:text-blue-200">@seat?.SeatNumber</span>
                        </div>
                        @if (!string.IsNullOrEmpty(seat?.QRCode))
                        {
                            <div class="flex justify-between">
                                <span class="text-blue-800 dark:text-blue-300">Mã QR:</span>
                                <span class="font-mono text-xs text-blue-900 dark:text-blue-200">@seat.QRCode</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Important Note -->
                <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-red-600 dark:text-red-400">warning</span>
                        <div>
                            <h4 class="font-medium text-red-900 dark:text-red-200 mb-1">Lưu ý quan trọng</h4>
                            <ul class="text-sm text-red-800 dark:text-red-300 space-y-1 list-disc list-inside">
                                <li>Vui lòng đến đúng giờ đã đặt (trong vòng 15 phút)</li>
                                <li>Nhớ check-in bằng mã QR trên ghế khi đến</li>
                                <li>Nếu không đến, chỗ ngồi sẽ tự động hủy sau 15 phút</li>
                                <li>Check-out khi rời phòng để người khác có thể sử dụng</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Error Message -->
                @if (TempData["Error"] != null)
                {
                    <div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
                        <div class="flex items-center gap-2 text-red-800 dark:text-red-200">
                            <span class="material-symbols-outlined">error</span>
                            <span>@TempData["Error"]</span>
                        </div>
                    </div>
                }

                <!-- Success Message -->
                @if (TempData["Success"] != null)
                {
                    <div class="mb-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
                        <div class="flex items-center gap-2 text-green-800 dark:text-green-200">
                            <span class="material-symbols-outlined">check_circle</span>
                            <span>@TempData["Success"]</span>
                        </div>
                    </div>
                }

                <!-- Buttons -->
                <div class="flex gap-4">
                    <button type="submit" 
                            id="submitBtn"
                            class="flex-1 px-6 py-3 bg-primary text-white rounded-lg hover:bg-blue-600 transition flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed">
                        <span class="material-symbols-outlined">check</span>
                        <span id="submitText">Xác nhận đặt chỗ</span>
                    </button>
                    <a href="@Url.Action("Details", "ReadingRoom", new { id = seat?.RoomId })"
                       class="flex-1 px-6 py-3 border border-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition text-center">
                        Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Combine date and time into reservationDate before submit
        document.getElementById('reservationForm').addEventListener('submit', function(e) {
            const dateInput = document.getElementById('reservationDate');
            const timeInput = document.getElementById('reservationTime');
            const dateTimeInput = document.getElementById('reservationDateTime');
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            
            if (!dateInput.value || !timeInput.value) {
                e.preventDefault();
                alert('Vui lòng chọn đầy đủ ngày và giờ');
                return false;
            }

            // Combine date and time into ISO format
            const dateTime = new Date(dateInput.value + 'T' + timeInput.value);
            
            // Validate that the date/time is in the future
            if (dateTime <= new Date()) {
                e.preventDefault();
                alert('Vui lòng chọn thời gian trong tương lai');
                return false;
            }

            dateTimeInput.value = dateTime.toISOString();
            
            // Disable submit button to prevent double submission
            submitBtn.disabled = true;
            submitText.textContent = 'Đang xử lý...';
        });

        // Set default time to current time + 1 hour
        document.addEventListener('DOMContentLoaded', function() {
            const now = new Date();
            now.setHours(now.getHours() + 1);
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            document.getElementById('reservationTime').value = `${hours}:${minutes}`;
        });
    </script>
}

