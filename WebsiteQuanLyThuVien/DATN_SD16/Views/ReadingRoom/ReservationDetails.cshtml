@model DATN_SD16.Models.Entities.ReadingRoomReservation
@{
    ViewData["Title"] = "Chi tiết đặt chỗ";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var canCheckIn = Model.Status == "Reserved" && 
                     Model.ReservationDate.Date == DateTime.Today &&
                     DateTime.Now.TimeOfDay >= Model.StartTime.Add(TimeSpan.FromMinutes(-15)) &&
                     DateTime.Now.TimeOfDay <= Model.EndTime;
}

<div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="@Url.Action("MyReservations")" class="inline-flex items-center gap-2 text-primary hover:underline">
            <span class="material-symbols-outlined">arrow_back</span>
            Quay lại danh sách
        </a>
    </div>

    <!-- Main Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden">
        <!-- Header -->
        <div class="@(Model.Status == "Reserved" ? "bg-gradient-to-r from-blue-500 to-blue-600" : Model.Status == "CheckedIn" ? "bg-gradient-to-r from-green-500 to-green-600" : Model.Status == "Completed" ? "bg-gradient-to-r from-gray-500 to-gray-600" : "bg-gradient-to-r from-red-500 to-red-600") px-6 py-4">
            <h1 class="text-2xl font-bold text-white">Chi tiết đặt chỗ</h1>
            <p class="text-white/80 text-sm">@Model.Seat?.Room?.RoomName - Chỗ @Model.Seat?.SeatNumber</p>
        </div>

        <!-- Content -->
        <div class="p-6">
            <!-- Status Banner -->
            @if (Model.Status == "Reserved" && canCheckIn)
            {
                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-300 dark:border-blue-700 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-blue-600">qr_code_scanner</span>
                        <div class="flex-1">
                            <h3 class="font-semibold text-blue-900 dark:text-blue-200 mb-1">Sẵn sàng check-in</h3>
                            <p class="text-blue-800 dark:text-blue-300 text-sm mb-3">
                                Bạn có thể check-in ngay bây giờ bằng cách quét mã QR tại chỗ ngồi.
                            </p>
                            <a href="@Url.Action("CheckIn")" 
                               class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-blue-600 transition">
                                <span class="material-symbols-outlined">qr_code_scanner</span>
                                Check-in ngay
                            </a>
                        </div>
                    </div>
                </div>
            }
            else if (Model.Status == "CheckedIn")
            {
                <div class="bg-green-50 dark:bg-green-900/20 border border-green-300 dark:border-green-700 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-green-600">check_circle</span>
                        <div>
                            <h3 class="font-semibold text-green-900 dark:text-green-200 mb-1">Đã check-in</h3>
                            <p class="text-green-800 dark:text-green-300 text-sm">
                                Bạn đã check-in lúc @Model.CheckInTime?.ToString("HH:mm dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                </div>
            }
            else if (Model.Status == "Completed")
            {
                <div class="bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-gray-600">task_alt</span>
                        <div>
                            <h3 class="font-semibold text-gray-900 dark:text-gray-200 mb-1">Đã hoàn thành</h3>
                            <p class="text-gray-700 dark:text-gray-300 text-sm">
                                Check-out lúc @Model.CheckOutTime?.ToString("HH:mm dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                </div>
            }
            else if (Model.Status == "Cancelled")
            {
                <div class="bg-red-50 dark:bg-red-900/20 border border-red-300 dark:border-red-700 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-red-600">cancel</span>
                        <div>
                            <h3 class="font-semibold text-red-900 dark:text-red-200 mb-1">Đã hủy</h3>
                            <p class="text-red-800 dark:text-red-300 text-sm">
                                Đặt chỗ này đã bị hủy
                            </p>
                        </div>
                    </div>
                </div>
            }

            <!-- Reservation Info -->
            <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin đặt chỗ</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">meeting_room</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Phòng đọc</p>
                            <p class="font-medium text-gray-900 dark:text-white">@Model.Seat?.Room?.RoomName</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">event_seat</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Chỗ ngồi</p>
                            <p class="font-medium text-gray-900 dark:text-white">@Model.Seat?.SeatNumber</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">event</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Ngày đặt</p>
                            <p class="font-medium text-gray-900 dark:text-white">@Model.ReservationDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">schedule</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Thời gian</p>
                            <p class="font-medium text-gray-900 dark:text-white">
                                @Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")
                            </p>
                        </div>
                    </div>

                    @if (Model.CheckInTime != null)
                    {
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-gray-400">login</span>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Thời gian check-in</p>
                                <p class="font-medium text-gray-900 dark:text-white">@Model.CheckInTime?.ToString("HH:mm dd/MM/yyyy")</p>
                            </div>
                        </div>
                    }

                    @if (Model.CheckOutTime != null)
                    {
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-gray-400">logout</span>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Thời gian check-out</p>
                                <p class="font-medium text-gray-900 dark:text-white">@Model.CheckOutTime?.ToString("HH:mm dd/MM/yyyy")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- QR Code Section (Only for Reserved status) -->
            @if (Model.Status == "Reserved" && !string.IsNullOrEmpty(Model.Seat?.QRCode))
            {
                <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Mã QR Check-in</h2>
                    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 text-center">
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                            Quét mã QR này tại chỗ ngồi để check-in
                        </p>
                        <div id="qrcode" class="inline-block bg-white p-4 rounded-lg"></div>
                        <p class="text-xs text-gray-500 mt-3 font-mono">@Model.Seat.QRCode</p>
                    </div>
                </div>
            }

            <!-- Actions -->
            @if (Model.Status == "Reserved")
            {
                <div class="flex gap-4">
                    @if (canCheckIn)
                    {
                        <a href="@Url.Action("CheckIn")" 
                           class="flex-1 px-6 py-3 bg-primary text-white text-center rounded-lg hover:bg-blue-600 transition">
                            <span class="material-symbols-outlined align-middle">qr_code_scanner</span>
                            Check-in ngay
                        </a>
                    }

                    <form method="post" asp-action="CancelReservation" asp-route-id="@Model.ReservationId" class="flex-1">
                        @Html.AntiForgeryToken()
                        <button type="submit" 
                                onclick="return confirm('Bạn có chắc muốn hủy đặt chỗ này?')"
                                class="w-full px-6 py-3 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition">
                            Hủy đặt chỗ
                        </button>
                    </form>
                </div>
            }
            else if (Model.Status == "CheckedIn")
            {
                <form method="post" asp-action="CheckOut" asp-route-id="@Model.ReservationId">
                    @Html.AntiForgeryToken()
                    <button type="submit" 
                            onclick="return confirm('Bạn có muốn check-out khỏi phòng đọc?')"
                            class="w-full px-6 py-3 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition">
                        <span class="material-symbols-outlined align-middle">logout</span>
                        Check-out
                    </button>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
<script>
    @if (Model.Status == "Reserved" && !string.IsNullOrEmpty(Model.Seat?.QRCode))
    {
        <text>
        // Generate QR Code
        new QRCode(document.getElementById("qrcode"), {
            text: "@Model.Seat.QRCode",
            width: 200,
            height: 200,
            colorDark: "#000000",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.H
        });
        </text>
    }
</script>
}

