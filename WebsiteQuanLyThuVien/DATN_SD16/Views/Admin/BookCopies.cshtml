@using DATN_SD16.Models.Entities
@model IEnumerable<BookCopy>
@{
    ViewData["Title"] = "Quản lý bản sách";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var books = ViewBag.Books as IEnumerable<Book> ?? Enumerable.Empty<Book>();
    var selectedBookId = ViewBag.SelectedBookId as int?;

    var statusOptions = new List<string> { "Available", "Borrowed", "Reserved", "Lost", "Damaged", "Maintenance" };
    var conditionOptions = new List<string> { "New", "Good", "Fair", "Poor", "Damaged" };
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <i class="fas fa-list me-2"></i> Danh sách bản sách
        </div>
        <a asp-action="BookCopies" class="btn btn-outline-light btn-sm">
            <i class="fas fa-sync-alt"></i> Làm mới
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-6">
                <label class="form-label">Chọn sách</label>
                <select name="bookId" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Chọn sách --</option>
                    @foreach (var book in books)
                    {
                        <option value="@book.BookId" selected="@(selectedBookId == book.BookId)">
                            @book.Title (@book.AvailableCopies/@book.TotalCopies)
                        </option>
                    }
                </select>
            </div>
        </form>

        @if (!selectedBookId.HasValue)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> Vui lòng chọn sách để xem và quản lý các bản sách.
            </div>
        }
        else
        {
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <i class="fas fa-plus me-2"></i> Thêm bản sách
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="CreateBookCopy">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="BookId" value="@selectedBookId" />
                                <div class="mb-3">
                                    <label class="form-label">Mã bản sách (CopyNumber) <span class="text-danger">*</span></label>
                                    <input name="CopyNumber" class="form-control" placeholder="VD: B001" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Barcode</label>
                                    <input name="Barcode" class="form-control" placeholder="Mã vạch (nếu có)" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select name="Status" class="form-select">
                                        @foreach (var status in statusOptions)
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tình trạng</label>
                                    <select name="Condition" class="form-select">
                                        @foreach (var condition in conditionOptions)
                                        {
                                            <option value="@condition">@condition</option>
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Ngày mua</label>
                                    <input type="date" name="PurchaseDate" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Giá mua</label>
                                    <input type="number" step="0.01" name="PurchasePrice" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Ghi chú</label>
                                    <textarea name="Notes" class="form-control" rows="2"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-save me-1"></i> Thêm bản sách
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <i class="fas fa-table me-2"></i> Bản sách của sách đã chọn
                        </div>
                        <div class="card-body table-responsive">
                            @if (!Model.Any())
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-circle me-2"></i> Sách chưa có bản sách nào. Vui lòng thêm mới.
                                </div>
                            }
                            else
                            {
                                <table class="table align-middle">
                                    <thead>
                                        <tr>
                                            <th>Mã bản</th>
                                            <th>Barcode</th>
                                            <th>Ngày mua</th>
                                            <th>Giá mua</th>
                                            <th>Ghi chú</th>
                                            <th>Cập nhật trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var copy in Model)
                                        {
                                            <tr>
                                                <td>@copy.CopyNumber</td>
                                                <td>@copy.Barcode</td>
                                                <td>@copy.PurchaseDate?.ToString("dd/MM/yyyy")</td>
                                                <td>@(copy.PurchasePrice?.ToString("N0") ?? "-")</td>
                                                <td>@copy.Notes</td>
                                                <td>
                                                    <form asp-action="UpdateBookCopyStatus" method="post" class="row row-cols-lg-auto g-2 align-items-center">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="copyId" value="@copy.CopyId" />
                                                        <div class="col-12">
                                                            <label class="form-label small mb-0 text-muted">Trạng thái</label>
                                                            <select name="status" class="form-select form-select-sm">
                                                                @foreach (var status in statusOptions)
                                                                {
                                                                    <option value="@status" selected="@(string.Equals(copy.Status, status, StringComparison.OrdinalIgnoreCase))">@status</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-12">
                                                            <label class="form-label small mb-0 text-muted">Tình trạng</label>
                                                            <select name="condition" class="form-select form-select-sm">
                                                                @foreach (var condition in conditionOptions)
                                                                {
                                                                    <option value="@condition" selected="@(string.Equals(copy.Condition, condition, StringComparison.OrdinalIgnoreCase))">@condition</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-12 mt-3 mt-lg-4">
                                                            <button type="submit" class="btn btn-sm btn-primary">
                                                                <i class="fas fa-save"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

