@model IEnumerable<DATN_SD16.Models.Entities.Author>
@{
    ViewData["Title"] = "Quản lý Tác giả";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-user-pen"></i> Quản lý Tác giả
        <button class="btn btn-light btn-sm float-end" onclick="openModal('createAuthorModal')">
            <i class="fas fa-plus"></i> Thêm mới
        </button>
    </div>
    <div class="card-body">
        <div class="table-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên tác giả</th>
                        <th>Quốc tịch</th>
                        <th>Tiểu sử</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.AuthorId</td>
                            <td><strong>@author.AuthorName</strong></td>
                            <td>@(author.Nationality ?? "-")</td>
                            <td>@(author.Biography != null && author.Biography.Length > 50 ? author.Biography.Substring(0, 50) + "..." : author.Biography ?? "-")</td>
                            <td>
                                <button type="button"
                                        class="btn btn-sm btn-primary"
                                        data-id="@author.AuthorId"
                                        data-name="@author.AuthorName"
                                        data-nationality="@(author.Nationality ?? string.Empty)"
                                        data-biography="@(author.Biography ?? string.Empty)"
                                        onclick="openEditAuthor(this)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-danger"
                                        data-id="@author.AuthorId"
                                        onclick="deleteAuthor(this)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Author Modal -->
<div class="modal fade" id="createAuthorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus"></i> Thêm tác giả mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createAuthorForm" asp-controller="Admin" asp-action="CreateAuthor" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên tác giả *</label>
                        <input type="text" name="AuthorName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quốc tịch</label>
                        <input type="text" name="Nationality" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tiểu sử</label>
                        <textarea name="Biography" class="form-control" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Author Modal -->
<div class="modal fade" id="editAuthorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Sửa tác giả</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editAuthorForm" asp-controller="Admin" asp-action="EditAuthor" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="AuthorId" id="editAuthorId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tên tác giả *</label>
                        <input type="text" name="AuthorName" id="editAuthorName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quốc tịch</label>
                        <input type="text" name="Nationality" id="editAuthorNationality" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tiểu sử</label>
                        <textarea name="Biography" id="editAuthorBiography" class="form-control" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const authorTokenField = '__RequestVerificationToken';

        function getAuthorToken() {
            const input = document.querySelector(`form input[name="${authorTokenField}"]`);
            return input ? input.value : '';
        }

        function buildAuthorFormData(payload) {
            const formData = new FormData();
            const token = getAuthorToken();
            if (token) {
                formData.append(authorTokenField, token);
            }
            Object.entries(payload || {}).forEach(([key, value]) => formData.append(key, value ?? ''));
            return formData;
        }

        function openEditAuthor(button) {
            const { id, name, nationality, biography } = button.dataset;
            document.getElementById('editAuthorId').value = id;
            document.getElementById('editAuthorName').value = name || '';
            document.getElementById('editAuthorNationality').value = nationality || '';
            document.getElementById('editAuthorBiography').value = biography || '';
            openModal('editAuthorModal');
        }

        function deleteAuthor(button) {
            const id = button.dataset.id;
            if (!id) return;

            showConfirmModal({
                message: 'Bạn có chắc muốn xóa tác giả này?',
                onConfirm: () => {
                    showLoading();
                    fetch('@Url.Action("DeleteAuthor", "Admin")', {
                        method: 'POST',
                        body: buildAuthorFormData({ id })
                    })
                    .then(response => response.json())
                    .then(data => {
                        hideLoading();
                        if (data.success) {
                            showToast('Thành công', data.message, 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast('Lỗi', data.message, 'error');
                        }
                    })
                    .catch(error => {
                        hideLoading();
                        showToast('Lỗi', error.message, 'error');
                    });
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            submitForm('createAuthorForm');
            submitForm('editAuthorForm');
        });
    </script>
}

