@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<!-- Hero Section -->
<div class="container mx-auto">
    <div class="flex flex-col gap-6 px-4 py-10 rounded-xl bg-white dark:bg-gray-800/50 md:flex-row">

        <!-- Left Side -->
        <div class="flex flex-col gap-6 md:min-w-[400px]">
            <h1 class="text-4xl font-black text-gray-900 dark:text-white">
                Find Your Next Great Read
            </h1>

            <h2 class="text-sm text-gray-600 dark:text-gray-300">
                Search our extensive collection of books and discover your next favorite story.
            </h2>

            <!-- Search -->
            <div class="flex h-14 w-full max-w-[480px]">
                <div class="flex items-center bg-background-light dark:bg-background-dark pl-4 rounded-l-lg">
                    <span class="material-symbols-outlined text-xl">search</span>
                </div>

                <input class="form-input flex-1 px-4 bg-background-light dark:bg-background-dark text-gray-900 dark:text-gray-100"
                       placeholder="Search by Title, Author, or ISBN" />

                <button class="px-4 bg-primary text-white font-bold rounded-r-lg">
                    Search
                </button>
            </div>
        </div>

        <!-- Right Side Banner -->
        <div class="w-full bg-cover rounded-lg aspect-video"
             style="background-image:url('https://lh3.googleusercontent.com/pw/...')">
        </div>
    </div>
</div>

<!-- New Arrivals -->
<section class="container mx-auto mt-8">
    <h2 class="text-2xl font-bold px-4 text-gray-900 dark:text-white">New Arrivals</h2>

    <div class="flex overflow-x-auto">
        <div class="flex gap-6 p-4">

            <!-- Book Card -->
            <div class="flex flex-col min-w-60 bg-white dark:bg-gray-800/50 rounded-xl shadow-sm">
                <div class="aspect-[3/4] bg-cover"
                     style="background-image:url('https://lh3.googleusercontent.com/pw/...')">
                </div>

                <div class="p-4 flex flex-col gap-2">
                    <p class="font-semibold text-gray-900 dark:text-white">
                        Book Title
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Author Name
                    </p>

                    <button class="h-10 rounded-lg bg-primary/20 hover:bg-primary/30 text-primary font-bold">
                        Reserve
                    </button>
                </div>
            </div>

            <!-- Bạn có thể lặp thêm thẻ card ở đây -->
        </div>
    </div>
</section>

<!-- My Account Section -->
<section class="container mx-auto mt-10">
    <div class="bg-white dark:bg-gray-800/50 rounded-xl p-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            My Account
        </h2>

        <p class="text-gray-600 dark:text-gray-300">Welcome back, Alex!</p>
        <!-- Bạn có thể copy Borrowed Books & Reservations vào đây -->
    </div>
</section>