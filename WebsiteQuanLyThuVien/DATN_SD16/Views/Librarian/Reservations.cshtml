@model IEnumerable<DATN_SD16.Models.Entities.BookReservation>
@{
    ViewData["Title"] = "Xử lý đặt sách online";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-calendar-check"></i> Xử lý đặt sách online
        <div class="float-end">
            <a asp-action="Reservations" asp-route-status="Pending" class="btn btn-warning btn-sm">
                <i class="fas fa-clock"></i> Chờ duyệt (@Model.Count(r => r.Status == "Pending"))
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <form method="get" class="d-flex gap-2">
                <select name="status" class="form-select" style="width: auto;">
                    <option value="All" selected="@(ViewBag.Status == "All")">Tất cả</option>
                    <option value="Pending" selected="@(ViewBag.Status == "Pending")">Chờ duyệt</option>
                    <option value="Approved" selected="@(ViewBag.Status == "Approved")">Đã duyệt</option>
                    <option value="Rejected" selected="@(ViewBag.Status == "Rejected")">Từ chối</option>
                    <option value="Completed" selected="@(ViewBag.Status == "Completed")">Hoàn thành</option>
                </select>
                <button type="submit" class="btn btn-secondary">Lọc</button>
            </form>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã đặt</th>
                        <th>Độc giả</th>
                        <th>Sách</th>
                        <th>Ngày đặt</th>
                        <th>Hết hạn</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>#@reservation.ReservationId</td>
                            <td>@reservation.User?.FullName</td>
                            <td>@reservation.Book?.Title</td>
                            <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
                            <td>@(reservation.ExpiryDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>
                                @if (reservation.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Chờ duyệt</span>
                                }
                                else if (reservation.Status == "Approved")
                                {
                                    <span class="badge bg-success">Đã duyệt</span>
                                }
                                else if (reservation.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Từ chối</span>
                                }
                                else if (reservation.Status == "Completed")
                                {
                                    <span class="badge bg-info">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@reservation.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ReservationDetails" asp-route-id="@reservation.ReservationId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (reservation.Status == "Pending")
                                {
                                    <form method="post"
                                          asp-action="ApproveReservation"
                                          asp-route-id="@reservation.ReservationId"
                                          class="d-inline"
                                          data-confirm="Xác nhận duyệt đặt sách này?"
                                          data-ajax="true">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check"></i> Duyệt
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="showRejectModal(@reservation.ReservationId)">
                                        <i class="fas fa-times"></i> Từ chối
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal từ chối -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Từ chối đặt sách</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Lý do từ chối <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xác nhận từ chối</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRejectModal(reservationId) {
            const form = document.getElementById('rejectForm');
            form.action = '@Url.Action("RejectReservation")/' + reservationId;
            const modal = new bootstrap.Modal(document.getElementById('rejectModal'));
            modal.show();
        }

        submitForm('rejectForm', function(data) {
            const modal = bootstrap.Modal.getInstance(document.getElementById('rejectModal'));
            modal.hide();
            location.reload();
        });
    </script>
}

