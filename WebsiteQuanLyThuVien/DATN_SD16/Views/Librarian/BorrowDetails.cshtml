@model DATN_SD16.Models.Entities.Borrow
@{
    ViewData["Title"] = "Chi tiết phiếu mượn";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-info-circle"></i> Chi tiết phiếu mượn - @Model.BorrowNumber
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Thông tin mượn</h5>
                <table class="table table-bordered">
                    <tr>
                        <th>Số phiếu:</th>
                        <td>@Model.BorrowNumber</td>
                    </tr>
                    <tr>
                        <th>Độc giả:</th>
                        <td>@Model.User?.FullName</td>
                    </tr>
                    <tr>
                        <th>Sách:</th>
                        <td>@Model.Copy?.Book?.Title</td>
                    </tr>
                    <tr>
                        <th>Bản sách:</th>
                        <td>@Model.Copy?.CopyNumber</td>
                    </tr>
                    <tr>
                        <th>Ngày mượn:</th>
                        <td>@Model.BorrowDate.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th>Hạn trả:</th>
                        <td>@Model.DueDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Ngày trả:</th>
                        <td>@(Model.ReturnDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>
                            @if (Model.Status == "Borrowed")
                            {
                                <span class="badge bg-primary">Đang mượn</span>
                            }
                            else if (Model.Status == "Returned")
                            {
                                <span class="badge bg-success">Đã trả</span>
                            }
                            else if (Model.Status == "Overdue")
                            {
                                <span class="badge bg-danger">Quá hạn</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <h5>Thông tin khác</h5>
                <table class="table table-bordered">
                    <tr>
                        <th>Tình trạng khi mượn:</th>
                        <td>@Model.ConditionOnBorrow</td>
                    </tr>
                    <tr>
                        <th>Tình trạng khi trả:</th>
                        <td>@(Model.ConditionOnReturn ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Phí phạt:</th>
                        <td>@Model.FineAmount.ToString("N0") đ</td>
                    </tr>
                    <tr>
                        <th>Phí phạt đã trả:</th>
                        <td>@Model.FinePaid.ToString("N0") đ</td>
                    </tr>
                    <tr>
                        <th>Thủ thư cho mượn:</th>
                        <td>@Model.BorrowedByUser?.FullName</td>
                    </tr>
                    <tr>
                        <th>Thủ thư nhận trả:</th>
                        <td>@(Model.ReturnedByUser?.FullName ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Ghi chú:</th>
                        <td>@(Model.Notes ?? "-")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-3">
            @if (Model.Status == "Borrowed")
            {
                <a asp-action="Return" asp-route-id="@Model.BorrowId" class="btn btn-success">
                    <i class="fas fa-undo"></i> Trả sách
                </a>
            }
            <a asp-action="Borrows" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>

