@model DATN_SD16.Models.Entities.User
@using DATN_SD16.Models.Entities
@using System.Linq
@{
    ViewData["Title"] = "Chi tiết Độc giả";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
    var activeBorrows = ViewBag.ActiveBorrows as IEnumerable<Borrow> ?? Enumerable.Empty<Borrow>();
    var overdueBorrows = ViewBag.OverdueBorrows as IEnumerable<Borrow> ?? Enumerable.Empty<Borrow>();
    var borrows = ViewBag.Borrows as IEnumerable<Borrow> ?? Enumerable.Empty<Borrow>();
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user"></i> Thông tin cá nhân
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Họ tên:</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Username:</th>
                        <td>@Model.Username</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Số điện thoại:</th>
                        <td>@(Model.PhoneNumber ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Địa chỉ:</th>
                        <td>@(Model.Address ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>
                            @if (Model.IsActive && !Model.IsLocked)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else if (Model.IsLocked)
                            {
                                <span class="badge bg-danger">Bị khóa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </td>
                    </tr>
                </table>

                @if (ViewBag.LibraryCard != null)
                {
                    <div class="mt-3">
                        <h6>Thẻ thư viện</h6>
                        <p><strong>Số thẻ:</strong> @((ViewBag.LibraryCard as DATN_SD16.Models.Entities.LibraryCard)?.CardNumber)</p>
                        <p><strong>Trạng thái:</strong> 
                            <span class="badge bg-@(((ViewBag.LibraryCard as DATN_SD16.Models.Entities.LibraryCard)?.Status == "Active") ? "success" : "warning")">
                                @((ViewBag.LibraryCard as DATN_SD16.Models.Entities.LibraryCard)?.Status)
                            </span>
                        </p>
                    </div>
                }
                else
                {
                    <div class="mt-3">
                        <a asp-action="CreateLibraryCard" asp-route-userId="@Model.UserId" class="btn btn-primary btn-sm">
                            <i class="fas fa-id-card"></i> Tạo thẻ thư viện
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-book"></i> Sách đang mượn (@activeBorrows.Count())
            </div>
            <div class="card-body">
                @if (activeBorrows.Any())
                {
                    <div class="table-container">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>Sách</th>
                                    <th>Ngày mượn</th>
                                    <th>Hạn trả</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var borrow in activeBorrows)
                                {
                                    <tr>
                                        <td>@borrow.BorrowNumber</td>
                                        <td>@borrow.Copy?.Book?.Title</td>
                                        <td>@borrow.BorrowDate.ToString("dd/MM/yyyy")</td>
                                        <td>@borrow.DueDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-action="BorrowDetails" asp-route-id="@borrow.BorrowId" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Không có sách đang mượn</p>
                }
            </div>
        </div>

        @if (overdueBorrows.Any())
        {
            <div class="card mb-3">
                <div class="card-header bg-danger text-white">
                    <i class="fas fa-exclamation-triangle"></i> Sách quá hạn (@overdueBorrows.Count())
                </div>
                <div class="card-body">
                    <div class="table-container">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>Sách</th>
                                    <th>Hạn trả</th>
                                    <th>Số ngày quá hạn</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var borrow in overdueBorrows)
                                {
                                    var daysOverdue = (DateTime.Now - borrow.DueDate).Days;
                                    <tr>
                                        <td>@borrow.BorrowNumber</td>
                                        <td>@borrow.Copy?.Book?.Title</td>
                                        <td>@borrow.DueDate.ToString("dd/MM/yyyy")</td>
                                        <td><span class="badge bg-danger">@daysOverdue ngày</span></td>
                                        <td>
                                            <a asp-action="BorrowDetails" asp-route-id="@borrow.BorrowId" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <i class="fas fa-history"></i> Lịch sử mượn
            </div>
            <div class="card-body">
                @if (borrows.Any())
                {
                    <div class="table-container">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>Sách</th>
                                    <th>Ngày mượn</th>
                                    <th>Ngày trả</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var borrow in borrows)
                                {
                                    <tr>
                                        <td>@borrow.BorrowNumber</td>
                                        <td>@borrow.Copy?.Book?.Title</td>
                                        <td>@borrow.BorrowDate.ToString("dd/MM/yyyy")</td>
                                        <td>@(borrow.ReturnDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>
                                            @if (borrow.Status == "Borrowed")
                                            {
                                                <span class="badge bg-primary">Đang mượn</span>
                                            }
                                            else if (borrow.Status == "Returned")
                                            {
                                                <span class="badge bg-success">Đã trả</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@borrow.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có lịch sử mượn</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Readers" class="btn btn-secondary">Quay lại</a>
</div>

