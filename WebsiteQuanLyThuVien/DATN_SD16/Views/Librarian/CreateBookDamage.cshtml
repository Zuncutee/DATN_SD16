@{
    ViewData["Title"] = "Báo cáo sách hỏng/mất";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-plus"></i> Báo cáo sách hỏng/mất
    </div>
    <div class="card-body">
        <form id="createDamageForm" method="post" asp-action="CreateBookDamage">
            @Html.AntiForgeryToken()
            
            <div class="form-group mb-3">
                <label class="form-label">Bản sách <span class="text-danger">*</span></label>
                <select name="CopyId" class="form-select" required>
                    <option value="">-- Chọn bản sách --</option>
                    @foreach (var copy in ViewBag.BookCopies as IEnumerable<DATN_SD16.Models.Entities.BookCopy>)
                    {
                        <option value="@copy.CopyId">@copy.CopyNumber - @copy.Book?.Title (@copy.Status)</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Loại <span class="text-danger">*</span></label>
                <select name="DamageType" class="form-select" required>
                    <option value="">-- Chọn loại --</option>
                    <option value="Lost">Mất</option>
                    <option value="Damaged">Hỏng</option>
                    <option value="Missing">Thiếu</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Mô tả</label>
                <textarea name="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Ghi chú</label>
                <textarea name="Notes" class="form-control" rows="2"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Báo cáo
                </button>
                <a asp-action="BookDamages" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        submitForm('createDamageForm', function(data) {
            window.location.href = '@Url.Action("BookDamages")';
        });
    </script>
}

