@model IEnumerable<DATN_SD16.Models.Entities.BookDamage>
@{
    ViewData["Title"] = "Quản lý Sách hỏng/mất";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-exclamation-circle"></i> Quản lý Sách hỏng/mất
        <div class="float-end">
            <a asp-action="CreateBookDamage" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Báo cáo mới
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <form method="get" class="d-flex gap-2">
                <select name="status" class="form-select" style="width: auto;">
                    <option value="All" selected="@(ViewBag.Status == "All")">Tất cả</option>
                    <option value="Reported" selected="@(ViewBag.Status == "Reported")">Đã báo cáo</option>
                    <option value="Processed" selected="@(ViewBag.Status == "Processed")">Đã xử lý</option>
                    <option value="Resolved" selected="@(ViewBag.Status == "Resolved")">Đã giải quyết</option>
                </select>
                <button type="submit" class="btn btn-secondary">Lọc</button>
            </form>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã báo cáo</th>
                        <th>Bản sách</th>
                        <th>Loại</th>
                        <th>Ngày báo cáo</th>
                        <th>Người báo cáo</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var damage in Model)
                    {
                        <tr>
                            <td>#@damage.DamageId</td>
                            <td>@damage.Copy?.CopyNumber - @damage.Copy?.Book?.Title</td>
                            <td>
                                @if (damage.DamageType == "Lost")
                                {
                                    <span class="badge bg-danger">Mất</span>
                                }
                                else if (damage.DamageType == "Damaged")
                                {
                                    <span class="badge bg-warning">Hỏng</span>
                                }
                                else if (damage.DamageType == "Missing")
                                {
                                    <span class="badge bg-info">Thiếu</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@damage.DamageType</span>
                                }
                            </td>
                            <td>@damage.DamageDate.ToString("dd/MM/yyyy")</td>
                            <td>@damage.ReportedByUser?.FullName</td>
                            <td>
                                @if (damage.Status == "Reported")
                                {
                                    <span class="badge bg-warning">Đã báo cáo</span>
                                }
                                else if (damage.Status == "Processed")
                                {
                                    <span class="badge bg-info">Đã xử lý</span>
                                }
                                else if (damage.Status == "Resolved")
                                {
                                    <span class="badge bg-success">Đã giải quyết</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@damage.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="BookDamageDetails" asp-route-id="@damage.DamageId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

