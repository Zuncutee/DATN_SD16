@{
    ViewData["Title"] = "Tạo phiếu kiểm kê";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-plus"></i> Tạo phiếu kiểm kê mới
    </div>
    <div class="card-body">
        <form id="createCheckForm" method="post" asp-action="CreateInventoryCheck">
            @Html.AntiForgeryToken()
            
            <div class="form-group mb-3">
                <label class="form-label">Ghi chú</label>
                <textarea name="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Sau khi tạo phiếu kiểm kê, bạn sẽ được chuyển đến trang chi tiết để thêm các bản sách cần kiểm kê.
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Tạo phiếu kiểm kê
                </button>
                <a asp-action="InventoryChecks" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        submitForm('createCheckForm', function(data) {
            if (data.checkId) {
                window.location.href = '@Url.Action("InventoryCheckDetails")/' + data.checkId;
            } else {
                window.location.href = '@Url.Action("InventoryChecks")';
            }
        });
    </script>
}

