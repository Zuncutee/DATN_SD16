@model DATN_SD16.Models.Entities.Borrow
@{
    ViewData["Title"] = "Chi tiết mượn sách";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var isOverdue = Model.Status == "Borrowed" && Model.DueDate < DateTime.Now;
    var daysLate = isOverdue ? (DateTime.Now - Model.DueDate).Days : 0;
}

<div class="max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="@Url.Action("Index", "Borrows")" 
           class="inline-flex items-center gap-2 text-primary hover:underline">
            <span class="material-symbols-outlined">arrow_back</span>
            Quay lại danh sách
        </a>
    </div>

    <!-- Status Alert -->
    @if (isOverdue)
    {
        <div class="bg-red-100 dark:bg-red-900/50 border border-red-300 dark:border-red-700 rounded-lg p-4 mb-6">
            <div class="flex items-start gap-3">
                <span class="material-symbols-outlined text-red-600 dark:text-red-400">warning</span>
                <div>
                    <h3 class="font-semibold text-red-900 dark:text-red-200 mb-1">Sách quá hạn</h3>
                    <p class="text-red-800 dark:text-red-300 text-sm">
                        Sách đã quá hạn @daysLate ngày. Vui lòng đến thư viện để trả sách và thanh toán phí phạt (nếu có).
                    </p>
                </div>
            </div>
        </div>
    }

    <!-- Main Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-primary to-blue-600 px-6 py-4">
            <h1 class="text-2xl font-bold text-white">Chi tiết phiếu mượn</h1>
            <p class="text-blue-100 text-sm">Mã phiếu: @Model.BorrowNumber</p>
        </div>

        <!-- Content -->
        <div class="p-6">
            <!-- Book Info Section -->
            <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin sách</h2>
                
                <div class="flex gap-4">
                    <!-- Book Cover -->
                    <div class="w-24 h-32 bg-gray-200 dark:bg-gray-700 rounded flex-shrink-0">
                        @if (!string.IsNullOrEmpty(Model.Copy?.Book?.CoverImage))
                        {
                            <img src="@Model.Copy.Book.CoverImage" 
                                 alt="@Model.Copy.Book.Title" 
                                 class="w-full h-full object-cover rounded" />
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center">
                                <span class="material-symbols-outlined text-gray-400">book</span>
                            </div>
                        }
                    </div>

                    <!-- Book Details -->
                    <div class="flex-1">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
                            @Model.Copy?.Book?.Title
                        </h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
                            <div>
                                <span class="text-gray-600 dark:text-gray-400">Tác giả:</span>
                                <span class="text-gray-900 dark:text-white ml-2">
                                    @if (Model.Copy?.Book?.BookAuthors != null && Model.Copy.Book.BookAuthors.Any())
                                    {
                                        @string.Join(", ", Model.Copy.Book.BookAuthors.Select(ba => ba.Author?.AuthorName))
                                    }
                                    else
                                    {
                                        <span>N/A</span>
                                    }
                                </span>
                            </div>
                            <div>
                                <span class="text-gray-600 dark:text-gray-400">Thể loại:</span>
                                <span class="text-gray-900 dark:text-white ml-2">
                                    @(Model.Copy?.Book?.Category?.CategoryName ?? "N/A")
                                </span>
                            </div>
                            <div>
                                <span class="text-gray-600 dark:text-gray-400">Bản sách:</span>
                                <span class="text-gray-900 dark:text-white ml-2">@Model.Copy?.CopyNumber</span>
                            </div>
                            <div>
                                <span class="text-gray-600 dark:text-gray-400">Tình trạng khi mượn:</span>
                                <span class="text-gray-900 dark:text-white ml-2">@Model.ConditionOnBorrow</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Borrow Info Section -->
            <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin mượn</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">event</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Ngày mượn</p>
                            <p class="font-medium text-gray-900 dark:text-white">@Model.BorrowDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">event_available</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Hạn trả</p>
                            <p class="font-medium @(isOverdue ? "text-red-600" : "text-gray-900 dark:text-white")">
                                @Model.DueDate.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                    </div>

                    @if (Model.ReturnDate != null)
                    {
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-gray-400">event_note</span>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Ngày trả thực tế</p>
                                <p class="font-medium text-gray-900 dark:text-white">@Model.ReturnDate?.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    }

                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-gray-400">label</span>
                        <div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Trạng thái</p>
                            <p>
                                @if (Model.Status == "Borrowed")
                                {
                                    @if (isOverdue)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-red-100 text-red-800 text-xs rounded-full">
                                            <span class="material-symbols-outlined text-sm">warning</span>
                                            Quá hạn
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">
                                            <span class="material-symbols-outlined text-sm">schedule</span>
                                            Đang mượn
                                        </span>
                                    }
                                }
                                else if (Model.Status == "Returned")
                                {
                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">
                                        <span class="material-symbols-outlined text-sm">check_circle</span>
                                        Đã trả
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fine Info Section -->
            @if (Model.FineAmount > 0)
            {
                <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Thông tin phí phạt</h2>
                    
                    <div class="bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-orange-800 dark:text-orange-300">Tổng phí phạt</p>
                                <p class="text-2xl font-bold text-orange-600 dark:text-orange-400">
                                    @Model.FineAmount.ToString("N0") đ
                                </p>
                            </div>
                            <span class="material-symbols-outlined text-4xl text-orange-400">payments</span>
                        </div>

                        @if (Model.FinePaid < Model.FineAmount)
                        {
                            <div class="mt-3 pt-3 border-t border-orange-200 dark:border-orange-700">
                                <p class="text-sm text-orange-800 dark:text-orange-300">
                                    Đã thanh toán: <span class="font-medium">@Model.FinePaid.ToString("N0") đ</span>
                                </p>
                                <p class="text-sm text-orange-800 dark:text-orange-300">
                                    Còn nợ: <span class="font-medium text-red-600">@((Model.FineAmount - Model.FinePaid).ToString("N0")) đ</span>
                                </p>
                            </div>
                        }
                        else
                        {
                            <p class="text-sm text-green-600 dark:text-green-400 mt-2">
                                ✓ Đã thanh toán đầy đủ
                            </p>
                        }
                    </div>
                </div>
            }

            <!-- Notes Section -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mb-6">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Ghi chú</h2>
                    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                        <p class="text-gray-700 dark:text-gray-300">@Model.Notes</p>
                    </div>
                </div>
            }

            <!-- Return Condition -->
            @if (!string.IsNullOrEmpty(Model.ConditionOnReturn))
            {
                <div class="mb-6">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Tình trạng khi trả</h2>
                    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                        <p class="text-gray-700 dark:text-gray-300">@Model.ConditionOnReturn</p>
                    </div>
                </div>
            }

            <!-- Action Note -->
            @if (Model.Status == "Borrowed")
            {
                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-blue-600 dark:text-blue-400">info</span>
                        <div>
                            <h4 class="font-medium text-blue-900 dark:text-blue-200 mb-1">Lưu ý</h4>
                            <p class="text-sm text-blue-800 dark:text-blue-300">
                                Để trả sách, vui lòng đến quầy thủ thư tại thư viện. Nhớ mang theo thẻ thư viện và sách cần trả.
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

